<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#20315F">

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="100dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="80dp"
                android:layout_gravity="center_horizontal"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:id="@+id/pf_iv_profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_edittext_corner"
                    android:backgroundTint="#5668ff"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_event" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edittext_corner"
            android:layout_marginTop="150dp"
            android:backgroundTint="#F6F6F6"
            android:paddingTop="70dp"
            >
            <TextView
                android:id="@+id/pf_tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Aditya Pandey"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/pf_tv_profile_position"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="President"
                android:textSize="20sp"
                android:layout_below="@+id/pf_tv_profile_name"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/pf_tv_profile_branch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="President"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pf_tv_profile_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="President"
                android:textSize="20sp"
                android:layout_below="@+id/pf_tv_profile_name"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"/>

            <RelativeLayout
                android:id="@+id/pf_contri_session_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pf_tv_profile_branch"
                android:background="@drawable/rounded_edittext_corner"
                android:backgroundTint="#ffffff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/black">
                <TextView
                    android:id="@+id/pf_tv_contributions"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="50dp"
                    android:text="Contributions:"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/pf_tv_sessions"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Sessions:"
                    android:layout_marginRight="50dp"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"/>
                <View
                    android:id="@+id/pf_horizontal_break"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/pf_tv_contributions"
                    android:background="@android:color/darker_gray"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/pf_horizontal_break"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ee9009"
                    app:cardElevation="10dp">
                    <ImageView
                        android:id="@+id/pf_profile_posts"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profile_post"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="POSTS"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/pf_horizontal_break"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ee9009"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/pf_profile_events"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profile_event"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVENTS"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/pf_horizontal_break"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#ee9009"
                    app:cardElevation="10dp">
                    <ImageView
                        android:id="@+id/pf_profile_resources"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profile_resource"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="POSTS"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/pf_tv_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERAL"
                android:layout_below="@+id/pf_contri_session_section"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pf_tv_general"
                android:background="@drawable/rounded_edittext_corner"
                android:backgroundTint="#ffffff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Change Password"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile_arrow_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>




        </RelativeLayout>




</FrameLayout>